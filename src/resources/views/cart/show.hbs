<div class="app">
    {{> header}}

    <div id="container">
    <div class="grid">
        <div class="grid__row app-container">
            <div class="grid__column-12">
                <div class="product-detail-item">
                    <div class="product-detail__img" style="background-image: url({{listCarts.img}});"></div>
                    <div class="product-detail-wrap">
                        <h3 class="product-detail__title">[DuyStore] {{listCarts.name}}</h3>

                        <div class="product-detail-sold">
                            <div class="product-detail-sold-heart ">
                                <i class="product-detail-like-empty fa-solid fa-heart "></i>
                                Yêu thích
                                <i class="product-detail-like-share fa-solid fa-share-nodes"></i>
                        </div>

                            <div class="product-detail-assess">
                                <i class="product-detail-assess-gold fa-solid fa-star"></i>
                                <i class="product-detail-assess-gold fa-solid fa-star"></i>
                                <i class="product-detail-assess-gold fa-solid fa-star"></i>
                                <i class="product-detail-assess-gold fa-solid fa-star"></i>
                                <i class="product-detail-assess-gold fa-solid fa-star"></i>
                            </div>
                        </div>

                        <div class="product-detail-price">
                            <div class="product-detail__origin">{{listCarts.price}}đ</div>
                            <div class="product-detail__sale">Giảm đến {{listCarts.sale}}%</div>
                        </div>
                        <div class="product-detail-buy">
                            <div class="product-detail-country">
                                <i class="fa-solid fa-truck-fast"></i>
                                    Vận chuyển từ: {{listCarts.country}}
                                </div>
                            <a href="/cart/add-to-cart/{{listCarts._id}}" class="btn-add-to-cart">Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>