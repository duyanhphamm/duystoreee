<div class="app">
    {{> header}}

    <div id="container">
        <div class="grid">
            <div class="grid__row app-container">
                <div class="grid__column-2">
                    <div class="category">
                        <h3 class="category__heading">Danh mục</h3>

                        <ul class="category-list">
                            <li class="category-item">
                                <a href="#" class="category-item__link category-item__link--active">
                                    <i class="fa-solid fa-desktop category-item__link-icon"></i>
                                    <span>Thiết bị điện tử</span>
                                </a>
                            </li>

                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-person category-item__link-icon"></i>
                                    <span>Thời trang nam</span>
                                </a>
                            </li>

                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-person-dress category-item__link-icon"></i>
                                    <span>Thời trang nữ</span>
                                </a>
                            </li>
                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-gamepad category-item__link-icon"></i>
                                    <span>Đồ chơi - Giải trí</span>
                                </a>
                            </li>
                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-lightbulb category-item__link-icon"></i>
                                    <span>Đồ gia dụng</span>
                                </a>
                            </li>
                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-hat-cowboy category-item__link-icon"></i>
                                    <span>Mũ</span>
                                </a>
                            </li>
                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-bag-shopping category-item__link-icon"></i>
                                    <span>Túi xách</span>
                                </a>
                            </li>
                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-camera category-item__link-icon"></i>
                                    <span>Máy ảnh - Máy quay phim</span>
                                </a>
                            </li>
                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-dumbbell category-item__link-icon"></i>
                                    <span>Dụng cụ Gym</span>
                                </a>
                            </li>
                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-futbol category-item__link-icon"></i>
                                    <span>Thể thao</span>
                                </a>
                            </li>
                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-pen category-item__link-icon"></i>
                                    <span>Học tập</span>
                                </a>
                            </li>
                            
                            <li class="category-item">
                                <a href="#" class="category-item__link">
                                    <i class="fa-solid fa-dog category-item__link-icon"></i>
                                    <span>Thức ăn thú cưng</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="grid__column-10">
                    <div class="home-filter">
                        <span class="home-filter__label">Sắp xếp theo</span>
                    </div>

                    <div class="home-product">
                        <div class="grid__row js-grid__row">
                            <!-- Product -->
                            {{#each listCarts}}
                            <div class="grid__column-2-4">
                                <div class="product-item">
                                    <a href="/cart/{{this._id}}" class="product-item__link">
                                        <div class="product-item__img" style="background-image: url({{this.img}});"></div>
                                    </a>
                                    <a href="/cart/{{this._id}}" class="product-item__link">
                                        <h3 class="product-item__title">{{this.name}}</h3>
                                    </a>
                                    <span class="product-item__deal">Mua kèm deal sốc</span>
                                    <div class="product-item-price">
                                        <div class="product-item__origin">{{this.price}}đ</div>
                                        <div class="product-item__sale">-{{this.sale}}%</div>
                                    </div>
                                    <div class="product-item-country">{{this.country}}</div>
                                </div>
                            </div>
                            {{/each}}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
